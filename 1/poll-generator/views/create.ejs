<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Common Meta Tags -->
    <%- include('./common_sections/meta_tags.ejs') %>
    <title>Create Polls</title>

    <!-- Bootstrap CSS -->
    <%- include('./common_sections/bootstrap_css.ejs') %>

    <!-- Some extra css -->
    <style>
      .create-poll {
        display: none;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="col-md-6 offset-md-3 my-5">
        <%- include('./common_sections/nav.ejs') %>
        <div class="card card-body my-4">
          <h4>Create A New Poll</h4>
          <form action="/create" method="post">
            <div class="form-group">
              <label for="title">Enter Title:</label>
              <input type="text" name="title" id="title" class="form-control" />
            </div>

            <div class="form-group">
              <label for="description">Enter Description:</label>
              <textarea
                name="description"
                id="description"
                class="form-control"
              ></textarea>
            </div>

            <div id="options" class="mt-3">
              <p>Enter Your Options:</p>
              <div class="form-group my-2">
                <input
                  type="text"
                  name="options"
                  class="form-control"
                  placeholder="Option 1"
                />
              </div>

              <div class="form-group my-2">
                <input
                  type="text"
                  name="options"
                  class="form-control"
                  placeholder="Option 2"
                />
              </div>
            </div>

            <button class="btn btn-secondary btn-sm" id="addOption">
              Add More Option
            </button>
            <br /><br />
            <input type="submit" class="btn btn-primary" value="Create Poll" />
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <%- include('./common_sections/bootstrap_js.ejs') %>

    <!-- Extra Javascript -->
    <script>
      let options = document.getElementById('options');
      let addOption = document.getElementById('addOption');

      let currentOptionNumber = 3;

      addOption.addEventListener('click', (e) => {
        e.preventDefault();
        let option = createNewOption();
        options.appendChild(option);
      });

      function createNewOption() {
        let div = document.createElement('div');
        div.className = 'form-group my-2';

        let input = document.createElement('input');
        input.type = 'text';
        input.name = 'options';
        input.placeholder = 'Option ' + currentOptionNumber++;
        input.className = 'form-control';

        div.appendChild(input);
        return div;
      }
    </script>
  </body>
</html>
